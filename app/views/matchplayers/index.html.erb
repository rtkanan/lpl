<h1><%= @match.season.name %> - Match <%= @match.id %> </h1>
<h2><%= @match.team_one.name %> vs <%= @match.team_two.name %> </h2>

<table>
  <tr>
    <th>Team</th>
    <th>Player</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matchplayers.each do |matchplayer| %>
  <tr>
    <td><%= matchplayer.team.name if matchplayer.team %></td>
    <td><%= matchplayer.player.name if matchplayer.player %></td>
    <td><%= link_to 'Show', matchplayer %></td>
    <td><%= link_to 'Edit', edit_matchplayer_path(matchplayer) %></td>
    <td><%= link_to 'Destroy', matchplayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Matchplayer', new_match_matchplayer_path(@match) %>
<%= link_to 'Fixtures', season_matches_path(@match.season) %>
