var initial;
var max;
var team_no = <%= escape_javascript @team_no %>;

if (team_no == 1)
{
  max = 7;
  initial = 0;
}
else if (team_no == 2)
{
  max = 15;
  initial = 8;
}
for (i=initial; i<=max; i++)
{ 
  id = 'match_matchplayers_attributes_' + i + '_player_id'
  $("#match_matchplayers_attributes_" + i + "_player_id").html("<%= escape_javascript options_for_select(@players.map {|player| [player.name, player.id]}) %>");
  $("#match_matchplayers_attributes_" + i + "_player_id").prepend("<option value='' selected=''>Select the Player</option>");
}